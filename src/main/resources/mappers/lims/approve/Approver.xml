<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="lims.api.approve.repository.ApproverMapper">

    <insert id="insert" parameterType="Approver" useGeneratedKeys="true" keyProperty="id">
        insert into approver
            (
                approval_id,
                approver_name,
                approve_yn
            )
            values(
                #{approvalId},
                #{approverName},
                #{approveYn}
            )
    </insert>

    <select id="findByApprovalId" parameterType="Long" resultType="Approver">
        SELECT
            id
            approval_id
            approver_name
            approve_yn
        FROM approver
        WHERE APPROVAL_ID = #{approvalId}
    </select>



</mapper>