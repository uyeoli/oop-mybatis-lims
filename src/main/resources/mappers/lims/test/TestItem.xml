<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="lims.api.test.repository.TestItemRepository">

    <select id="findItems" resultType="TestItem" parameterType="Long">
        SELECT
            id,
            receipt_Id,
            item_Name
        FROM test_item
        where receipt_Id = #{receiptId}
    </select>

    <insert id="insert" parameterType="TestItem">
        INSERT INTO test_item(
            receipt_id,
            item_Name
        )VALUES(
            #{receiptId},
            #{itemName}
        )
    </insert>

    <delete id="deleteById" parameterType="Long">
        DELETE FROM test_item where id = #{id}
    </delete>

    <delete id="deleteByReceiptId" parameterType="Long">
        DELETE FROM test_item where receipt_id = #{receiptId}
    </delete>


</mapper>