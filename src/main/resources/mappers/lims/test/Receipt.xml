<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="lims.api.test.repository.ReceiptRepository">

    <select id="findAll" resultType="Receipt">
        SELECT
            id
            , request_id
            , receipt_number
            , approve_id
            , receipt_date
            , test_status
        FROM receipt
    </select>

    <select id="findById" parameterType="Long" resultType="Receipt">
        select * from receipt where id = #{id}
    </select>


    <insert id="insert" parameterType="Receipt" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO receipt(
            request_id
            ,receipt_number
            ,approve_id
            ,receipt_date
            ,test_status
        )VALUES(
            #{requestId}
            ,#{receiptNumber}
            ,#{approveId}
            ,#{receiptDate}
            ,#{testStatus}
        )
    </insert>

    <insert id="update" parameterType="Request">
        UPDATE receipt SET
            receipt_number = #{receiptNumber},
            receipt_date = #{receiptDate},
            test_status = #{testStatus}
        WHERE id = #{id}
    </insert>

    <delete id="deleteById" parameterType="Long">
        DELETE FROM receipt WHERE id = #{id}
    </delete>

    <update id="updateApproveKey" parameterType="Receipt">
        update receipt set approve_id = #{approveId} where id = #{id}
    </update>


</mapper>